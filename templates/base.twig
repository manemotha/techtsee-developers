<script>
    // Sections to observe
    const homeSection = document.getElementById("home");
    const servicesSection = document.getElementById("services");
    const packagesSection = document.getElementById("packages");

    // Navigation Buttons
    const homeButton = document.getElementById("home-button");
    const servicesButton = document.getElementById("services-button");
    const packagesButton = document.getElementById("packages-button");
    const contactButton = document.getElementById("contact-button");

    // Intersection Observer to highlight navbar buttons
    const observer = new IntersectionObserver(
    entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        if (entry.target.id === "home") {
          servicesButton.classList.remove("selected-navbar-button");
          packagesButton.classList.remove("selected-navbar-button");
          contactButton.classList.remove("selected-navbar-button");
          homeButton.classList.add("selected-navbar-button");
        } else if (entry.target.id === "services") {
          homeButton.classList.remove("selected-navbar-button");
          packagesButton.classList.remove("selected-navbar-button");
          contactButton.classList.remove("selected-navbar-button");
          servicesButton.classList.add("selected-navbar-button");
        } else if (entry.target.id === "packages") {
          homeButton.classList.remove("selected-navbar-button");
          servicesButton.classList.remove("selected-navbar-button");
          contactButton.classList.remove("selected-navbar-button");
          packagesButton.classList.add("selected-navbar-button");
        }
      }
    });
    },
    {
    threshold: 0.4  // adjust based on how much must be visible
    }
    );

    // Start observing the sections
    observer.observe(homeSection);
    observer.observe(servicesSection);
    observer.observe(packagesSection);
</script>

